<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.miheladera">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiHeladera"
        tools:targetApi="31">
        <activity
            android:name=".PruebaLista"
            android:exported="false" />
        <activity
            android:name=".Scanner"
            android:exported="false" />
        <activity
            android:name=".Listado"
            android:exported="false"
            android:label="Listado de Productos registrados"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".VentanaAgregar"
            android:exported="false"
            android:label="Agregar Producto"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".VentanaBuscar"
            android:exported="false"
            android:label="Buscar Producto"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".VentanaActualizar"
            android:exported="false"
            android:label="Actualizar Producto"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Desposito">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>